{
	"name": "spotify-api-ts",
	"version": "1.0.0",
	"description": "",
	"main": "./dist/index.js",
	"scripts": {
		"build": "rimraf ./dist && npm run lint && tsc",
		"format": "prettier --write **/*ts",
		"lint": "eslint --fix **/*.ts",
		"prepublish": "npm run build",
		"docs": "typedoc --out docs",
		"precommit": "lint-staged",
		"start:token": "node ./dist/runner/tokenGenerator",
		"main": "node ./dist/runner/main",
		"ciflow": "node ./dist/runner/CIFlow",
		"profile:crawl": "node ./dist/runner/profileCrawler",
		"similar:playlist": "node ./dist/runner/playlistRecommedations",
		"build:scheduled": "npm run build && npm run ciflow"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.ts": [
			"npm run format",
			"npm run lint",
			"git add"
		]
	},
	"repository": {
		"type": "git",
		"url": ""
	},
	"keywords": [
		"Typescript",
		"Spotify"
	],
	"author": "Rajdeep Dey",
	"license": "ISC",
	"devDependencies": {
		"@types/express": "^4.17.17",
		"@types/node": "^20.1.4",
		"@types/spotify-web-api-node": "^5.0.7",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"dotenv": "^16.0.3",
		"esdoc": "^1.0.4",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-plugin-prettier": "4.2.1",
		"express": "^4.18.2",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"log4js": "^6.3.0",
		"moment": "^2.29.4",
		"prettier": "^2.8.5",
		"puppeteer": "^20.2.0",
		"puppeteer-screen-recorder": "^2.1.2",
		"rimraf": "^5.0.0",
		"ts-node": "^10.9.1",
		"typedoc": "^0.24.7",
		"typescript": "^5.0.2",
		"unsplash-js": "^7.0.15"
	},
	"dependencies": {
		"image-downloader": "^4.3.0",
		"spotify-web-api-node": "^5.0.2"
	}
}
